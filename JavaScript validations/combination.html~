<script>
//User validation
function UserValidate()
{
        var x = document.form1.user.value;
var patt1=/\s/g;
 if(x.match(patt1)){
 //             alert("you cant use space")
document.getElementById('errfn').innerHTML="this is invalid name";
return false; }

       
      else if (x.length < 1){
      //     alert("its empty")     
document.getElementById('errfn').innerHTML="this is invalid name";
return false;
           }
else {
document.getElementById('errfn').innerHTML="ok";
return true;}



// For final confirmation



}
//Password
function PasswordValidate()
{
        var y = document.form1.pass.value;
       var letters = /^[A-Za-z]+$/;
      if(y.match(letters)){
             // alert("Use numbers");
document.getElementById('errfn1').innerHTML="use number";return false; }
       
        if (y.length < 6){
             //  alert("your password need atleast more than 6 character");
document.getElementById('errfn1').innerHTML="use more than 6 words"; return false;
           }
else {
document.getElementById('errfn1').innerHTML="ok";
return true;}
}

//Email validation

function EmailValidate()
{
var x=document.forms["form1"]["email"].value;
var atpos=x.indexOf("@");
var dotpos=x.lastIndexOf(".");
if(atpos<1 || dotpos<atpos+2 || dotpos+2>=x.length)
  {
  //alert("Not a valid e-mail address");
document.getElementById('errfn2').innerHTML="invalid email";
  return false;
  }
else{
document.getElementById('errfn2').innerHTML="ok";
return true;
}
}


//Mobile Validation
function MobileValidate()
{
        var x = document.form1.phone_no.value;
        if(isNaN(x)|| x.indexOf(" ")!=-1){
       //       alert("Enter numeric value in your phone number");
document.getElementById('errfn3').innerHTML="invalid mobile number";return false; }
      else if (x.length < 8){
            //   alert("you need more number to insert");
document.getElementById('errfn3').innerHTML="invalid mobile number"; 
return false;
           }
else {
document.getElementById('errfn3').innerHTML="ok";
return true;}
}


//Gender Validation
function GenderValidate() {
                var genders = document.getElementsByName("gender");
                if (genders[0].checked == true) {
                    return true;
                } else if (genders[1].checked == true) {
                    return true;
                } else {
                    // no checked
                    alert("you must select your gender"); return false;
                }
                return true;
            }


