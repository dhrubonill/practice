<script>
function Validate()
{
        var x = document.password.pass.value;
       var letters = /^[A-Za-z]+$/;
      if(x.match(letters)){
              alert("Use numbers");return false; }
       
        if (x.length < 6){
                alert("your password need atleast more than 6 character"); return false;
           }
}

</script>
</head>
<body>
    <form name="password" action="#" method="post">
        <p>Write down the damn password</p>
       
Password: <input name="pass" type="password" id="pass" />
<input type="submit" name="Submit" value="Go" onclick="return Validate()"/>
         
    </form>
